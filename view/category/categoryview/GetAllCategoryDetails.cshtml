@model IEnumerable<CRUDoperationmvc.Models.Models_cat.CategoryModel>

<p>
    @Html.ActionLink("Create New", "AddCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCatDetails", new { id = item.CategoryID }) |
            @Html.ActionLink("Details", "GetAllCategoryDetails", new { id = item.CategoryID }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryID }, new { onclick = "return confirm('Are you sure want to delete ?');" })
        </td>
    </tr>
}

</table>
